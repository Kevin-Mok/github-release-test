    definition {
        cpsScm {
            scm {
                git {
                    remote {
                        github('Kevin-Mok/kogito-images')
                    }
                    branch('*/KOGITO-1031')
                }
            }
            scriptPath('Jenkinsfile.deploy')
            lightweight(false)
        }
    }
}
