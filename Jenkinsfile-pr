@Library('jenkins-pipeline-shared-libraries-kmok')_

pipeline {
    agent any
    environment {
        NEW_BRANCH = "${JOB_BASE_NAME}-${BUILD_NUMBER}"
    }
    stages {
        stage('Clone repositories') { 
            steps {
                dir("github-release-test") {
                    script {
                        def commitMsg = "Add build tag to README"
                        def prBody = "Generated by build ${BUILD_TAG}: ${BUILD_URL}"
                        def botCreds = "kmok-github-bot"
                        checkout(githubscm.resolveRepository("jenkins-test", "Kevin-Mok-Bot", "master", false))
                        /* def branch = "2415-8" */
                        githubscm.createBranch(NEW_BRANCH)
                        /* sh "git status" */
                        sh "printf \"${BUILD_TAG}\n\" >> README.md"
                        githubscm.commitChanges("Jenkins", "nzxt@jenkins.com", commitMsg)
                        githubscm.pushObject("origin", NEW_BRANCH, botCreds)
                        sh "git status"
                        def prLink = githubscm.createPR(commitMsg, "master", botCreds)
                        echo "${prLink}"
                        def prLink = githubscm.createPR(commitMsg, prBody, "master", botCreds)
                        echo "${prLink}"
                        /* sh "hub pull-request -m '${commitMsg}' -m '${prBody}'" */
                    }
                }
            }
        }
    }
}
