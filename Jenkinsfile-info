pipeline {
    agent { label 'kie-rhel7-priority' }
    environment {
        GITHUB_REPO = "jenkins-test"
    }
    stages {
        stage('Release') {
            steps {
                script {
                    cleanWs()
                    def foo = 'bar'
                    withCredentials([usernamePassword(credentialsId: 'kmok-github-bot', usernameVariable: 'GITHUB_USER', passwordVariable: 'GITHUB_TOKEN')]){
                        sh """
                        echo ${foo}
                        github-release info
                        """
                    }
                }
            }
        }
    }
}
