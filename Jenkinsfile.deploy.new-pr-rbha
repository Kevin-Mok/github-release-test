@Library('jenkins-pipeline-shared-libraries-kmok')_

pipeline {
    agent {label 'kogito-cloud && !master'}
    stages {
        stage('Clone repositories') { 
            steps {
                dir("github-release-test") {
                    script {
                        checkout(githubscm.resolveRepository("github-release-test", "Kevin-Mok", "master", false))
                        def branch = "${JOB_BASE_NAME}-${BUILD_NUMBER}"
                        githubscm.createBranch(branch)
                        sh "echo a >> README.md"
                        githubscm.commitChanges("Jenkins", "nzxt@jenkins.com", "Update Maven version")
                        githubscm.pushObject("origin", branch)
                        githubscm.createPR("PR for release generated by build \"${BUILD_TAG}\".", "master", "kmok-github")
                    }
                }
            }
        }
    }
}
